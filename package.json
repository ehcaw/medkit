{
  "name": "codebase-indexer",
  "displayName": "Codebase Indexer",
  "description": "High-performance codebase indexer using HelixDB and Tree-sitter",
  "version": "0.1.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "scan": "npm run build && node dist/cli.js scan",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "index": "npm run build && node dist/index.js"
  },
  "dependencies": {
    "tree-sitter": "^0.20.6",
    "tree-sitter-javascript": "^0.20.0",
    "tree-sitter-typescript": "^0.20.1",
    "tree-sitter-python": "^0.20.1",
    "tree-sitter-rust": "^0.20.1",
    "tree-sitter-c": "^0.20.2",
    "tree-sitter-cpp": "^0.20.0",
    "sqlite3": "^5.1.6",
    "glob": "^10.3.10",
    "mime-types": "^2.1.35",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "ora": "^7.0.1",
    "cli-progress": "^3.12.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/mime-types": "^2.1.4",
    "@types/sqlite3": "^3.1.11",
    "@types/jest": "^29.0.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
